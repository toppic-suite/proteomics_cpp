include ../Makefile.in

TEST_ZERO_PTM_OBJS = $(addprefix $(OBJ_DIR)/, test_zero_ptm.o)

TEST_ONE_PTM_OBJS = $(addprefix $(OBJ_DIR)/, test_one_ptm.o)

TEST_TWO_PTM_OBJS = $(addprefix $(OBJ_DIR)/, test_two_ptm.o)

TEST_BASE_OPT_OBJS = $(addprefix $(OBJ_DIR)/, test_base_opt.o)

TEST_EVALUE_OBJS = $(addprefix $(OBJ_DIR)/, test_evalue.o)

TEST_EVALUE_FACTOR_OBJS = $(addprefix $(OBJ_DIR)/, test_evalue_factor.o)

TEST_PRSM_VIEW_OBJS = $(addprefix $(OBJ_DIR)/, test_prsm_view.o)

TEST_GRAPH_ALIGN_OBJS = $(addprefix $(OBJ_DIR)/, test_graph_align.o)

#OBJS = $(BASE_OBJS) $(SPEC_OBJS) $(PRSM_OBJS) $(ZERO_PTM_OBJS) $(DIAG_FILTER_OBJS) $(ONE_PTM_FILTER_OBJS) $(PTM_OBJS) $(ARGUMENT_OBJS) $(GRAPH_OBJS) $(GRAPH_ALIGN_OBJS) $(TDGF_OBJS) 

OBJS = $(BASE_OBJS) $(SPEC_OBJS) $(PRSM_OBJS) $(ZERO_PTM_FILTER_OBJS) $(ZERO_PTM_SEARCH_OBJS) $(ONE_PTM_FILTER_OBJS) $(ONE_PTM_SEARCH_OBJS) $(DIAG_FILTER_OBJS) $(PTM_SEARCH_OBJS) $(TDGF_OBJS) $(ARGUMENT_OBJS)  

TEST_ZERO_PTM_LINK_OBJS = $(OBJS) $(TEST_ZERO_PTM_OBJS)

TEST_ONE_PTM_LINK_OBJS = $(OBJS) $(TEST_ONE_PTM_OBJS)

TEST_TWO_PTM_LINK_OBJS = $(OBJS) $(TEST_TWO_PTM_OBJS)

TEST_BASE_OPT_LINK_OBJS = $(OBJS) $(TEST_BASE_OPT_OBJS)

TEST_EVALUE_LINK_OBJS = $(OBJS) $(TEST_EVALUE_OBJS)

TEST_EVALUE_FACTOR_LINK_OBJS = $(OBJS) $(TEST_EVALUE_FACTOR_OBJS)

TEST_PRSM_VIEW_LINK_OBJS = $(OBJS) $(TEST_PRSM_VIEW_OBJS)

TEST_GRAPH_ALIGN_LINK_OBJS = $(OBJS) $(TEST_GRAPH_ALIGN_OBJS)


BIN_DIR = ../../bin

#
# define the executable file 
TEST_ZERO_PTM = $(BIN_DIR)/test_zero_ptm
TEST_ONE_PTM = $(BIN_DIR)/test_one_ptm
TEST_TWO_PTM = $(BIN_DIR)/test_two_ptm
TEST_BASE_OPT = $(BIN_DIR)/test_base_opt
TEST_EVALUE = $(BIN_DIR)/test_evalue
TEST_EVALUE_FACTOR = $(BIN_DIR)/test_evalue_factor
TEST_PRSM_VIEW = $(BIN_DIR)/test_prsm_view
TEST_GRAPH_ALIGN = $(BIN_DIR)/test_graph_align
#
# The following part of the makefile is generic; it can be used to 
# build any executable just by changing the definitions above and by
# deleting dependencies appended to the file from 'make depend'
#
#
.PHONY: depend clean
#
#all:    $(TEST_ZERO_PTM) $(TEST_DIAG_FILTER) $(TEST_ONE_PTM_FILTER) $(TEST_PTM_SEARCH) $(TEST_EVALUE) $(TEST_EVALUE_FACTOR) $(TEST_PRSM_VIEW)
all:    $(TEST_ZERO_PTM) $(TEST_ONE_PTM) $(TEST_BASE_OPT) 

$(TEST_ZERO_PTM): $(TEST_ZERO_PTM_LINK_OBJS) 
	$(CC) $(CPPFLAGS) $(INCLUDES) -o $(TEST_ZERO_PTM) $(TEST_ZERO_PTM_LINK_OBJS) $(LFLAGS) $(LIBS)

$(TEST_ONE_PTM): $(TEST_ONE_PTM_LINK_OBJS) 
	$(CC) $(CPPFLAGS) $(INCLUDES) -o $(TEST_ONE_PTM) $(TEST_ONE_PTM_LINK_OBJS) $(LFLAGS) $(LIBS)

$(TEST_TWO_PTM): $(TEST_TWO_PTM_LINK_OBJS) 
	$(CC) $(CPPFLAGS) $(INCLUDES) -o $(TEST_TWO_PTM) $(TEST_TWO_PTM_LINK_OBJS) $(LFLAGS) $(LIBS)

$(TEST_BASE_OPT): $(TEST_BASE_OPT_LINK_OBJS) 
	$(CC) $(CPPFLAGS) $(INCLUDES) -o $(TEST_BASE_OPT) $(TEST_BASE_OPT_LINK_OBJS) $(LFLAGS) $(LIBS)

$(TEST_EVALUE): $(TEST_EVALUE_LINK_OBJS) 
	$(CC) $(CPPFLAGS) $(INCLUDES) -o $(TEST_EVALUE) $(TEST_EVALUE_LINK_OBJS) $(LFLAGS) $(LIBS)

$(TEST_EVALUE_FACTOR): $(TEST_EVALUE_FACTOR_LINK_OBJS) 
	$(CC) $(CPPFLAGS) $(INCLUDES) -o $(TEST_EVALUE_FACTOR) $(TEST_EVALUE_FACTOR_LINK_OBJS) $(LFLAGS) $(LIBS)

$(TEST_PRSM_VIEW): $(TEST_PRSM_VIEW_LINK_OBJS)
	$(CC) $(CPPFLAGS) $(INCLUDES) -o $(TEST_PRSM_VIEW) $(TEST_PRSM_VIEW_LINK_OBJS) $(LFLAGS) $(LIBS)

$(TEST_GRAPH_ALIGN): $(TEST_GRAPH_ALIGN_LINK_OBJS)
	$(CC) $(CPPFLAGS) $(INCLUDES) -o $(TEST_GRAPH_ALIGN) $(TEST_GRAPH_ALIGN_LINK_OBJS) $(LFLAGS) $(LIBS)

$(OBJ_DIR)/%.o: %.cpp
	$(CC) -c $(CPPFLAGS) $(INCLUDES) $< -o $@

clean:
	$(RM) *~ $(TEST_ZERO_PTM) $(TEST_ONE_PTM) $(TEST_DIAG_FILTER) $(TEST_ONE_PTM_FILTER) $(TEST_PTM_SEARCH) $(TEST_EVALUE) $(TEST_PRSM_VIEW) $(TEST_ZERO_PTM_OBJS) $(TEST_DIAG_FILTER_OBJS) $(TEST_ONE_PTM_FILTER_OBJS) $(TEST_PTM_SEARCH_OBJS) $(TEST_EVALUE_OBJS) $(TEST_PRSM_VIEW_OBJS) 

depend: $(SRCS)
